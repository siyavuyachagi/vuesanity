{
  "$schema": "https://json.schemastore.org/package.json",
  "name": "@siyavuyachagi/vuesanity",
  "version": "2.0.0-beta.0",
  "description": "A lightweight and flexible Vue 3 validation utility designed to simplify model validation in Vue applications. Built with TypeScript for type safety and performance.",
  "license": "MIT",
  "author": "Chagi Siyavuya (CeeJay)",
  "repository": {
    "type": "git",
    "url": "https://github.com/siyavuyachagi/vuesanity.git"
  },
  "homepage": "https://github.com/siyavuyachagi/vuesanity#readme",
  "keywords": [
    "nuxtjs",
    "vuejs",
    "model-validations",
    "form-validation",
    "typescript",
    "javascript",
    "utility",
    "utils",
    "library",
    "lib"
  ],
  "type": "module",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    }
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "tsc -p tsconfig.build.json",
    "export:structure": "node scripts/export-structure.js",
    "metrics": "node scripts/metrics.js",
    "prepare": "npm run build",
    "test": "vitest",
    "test:coverage": "vitest --coverage",
    "test:ui": "vitest --ui"
  },
  "devDependencies": {
    "@vitejs/plugin-vue": "^6.0.1",
    "@vitest/coverage-v8": "^3.2.4",
    "@vitest/ui": "^3.2.4",
    "@vue/compiler-sfc": "^3.5.13",
    "@vue/test-utils": "^2.4.6",
    "chalk": "^5.6.2",
    "happy-dom": "^20.0.5",
    "tsup": "^8.3.6",
    "typescript": "^5.7.3",
    "vitest": "^3.2.4"
  },
  "peerDependencies": {
    "vue": "^3.0.0"
  }
}
