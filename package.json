{
  "$schema": "https://json.schemastore.org/package.json",
  "name": "@siyavuyachagi/vuesanity",
  "version": "1.0.1",
  "description": "A lightweight and flexible Vue 3 validation utility designed to simplify model validation in Vue applications. Built with TypeScript for type safety and performance.",
  "license": "MIT",
  "author": "Chagi Siyavuya (CeeJay)",
  "repository": {
    "type": "git",
    "url": "https://github.com/siyavuyachagi/vuesanity.git"
  },
  "homepage": "https://github.com/siyavuyachagi/vuesanity#readme",
  "keywords": [
    "nuxtjs",
    "vuejs",
    "model-validations",
    "form-validation",
    "typescript",
    "javascript",
    "utility",
    "utils",
    "library",
    "lib"
  ],
  "type": "module",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    }
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "tsup src --dts --format esm,cjs --out-dir dist",
    "metrics": "node scripts/metrics.js",
    "export:structure": "node scripts/export-structure.js",
    "prepare": "npm run build"
  },
  "devDependencies": {
    "@vue/compiler-sfc": "^3.5.13",
    "chalk": "^5.6.2",
    "tsup": "^8.3.6",
    "typescript": "^5.7.3"
  },
  "peerDependencies": {
    "vue": "^3.0.0"
  }
}
