{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "Node",
    "declaration": true,
    "declarationMap": true,
    "outDir": "dist",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "baseUrl": "./",           // <--- root of the project
    "paths": {
      "~/*": ["./*"]           // <--- '~/' points to project root
    }
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist"]
}
